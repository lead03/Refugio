@model Refugio.Areas.Admin.Models.VeterinarianSpeciality.Edit

@{
    ViewBag.Title = "Editar Especialidad Veterinaria";
}

<!-- Estilos Modernos -->
<style>
    :root {
        --form-border-top: 5px solid #3f51b5;
        --font-size-base: 16px;
        --form-background-color: #fff;
        --soft-right-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        --form-placeholder-color: #666;
        --default-transition: all 0.3s cubic-bezier(0.4, 0, 1, 1);
        --form-box-border: 1px solid #ddd;
        --form-input-focus-border-color: #3f51b5;
        --form-input-focus-backgrund-color: #f9f9f9;
        --form-input-label-focus-color: #3f51b5
    }

    html {
        font-size: var(--font-size-base);
    }

    .form-container {
        margin: 5rem 0;
        padding: 5rem;
        background-color: var(--form-background-color);
        border-radius: 10px;
        box-shadow: var(--soft-right-shadow);
        border-top: var(--form-border-top);
    }

    h2 {
        text-align: center;
        color: #3f51b5;
        margin-bottom: 4rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .form-floating {
        /*        position: relative;*/
        margin-bottom: 1.5rem;
    }

        .form-floating label {
            /*            position: absolute;*/
            padding-left: 1.5rem;
            font-size: 1rem;
            color: var(--form-placeholder-color);
            transition: var(--default-transition);
            pointer-events: none;
        }

        .form-floating input {
            border: var(--form-box-border);
            border-radius: 8px;
            transition: border-color 0.5s;
        }

            .form-floating input:focus {
                outline: none;
                border-color: var(--form-input-focus-border-color);
                background-color: var(--form-input-focus-backgrund-color);
            }

                .form-floating input:focus + label,
                .form-floating input:not(:placeholder-shown) + label {
                    top: 12px;
                    left: 5px;
                    font-size: 0.85rem;
                    color: var(--form-input-label-focus-color);
                    padding: 0 5px;
                }

    .text-danger {
        font-size: 0.9em;
        margin-top: 4px;
    }

    .buttons-container {
        padding-top: 3rem;
        display: flex;
        gap: 2rem;
        justify-content: center;
    }

    .btn {
        display: inline-block;
        width: 150px;
        padding: 12px 24px;
        font-size: 1rem;
        font-weight: bold;
        color: #fff;
        border: none;
        border-radius: 8px;
        background: linear-gradient(45deg, #3f51b5, #5c6bc0);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        background: linear-gradient(45deg, #303f9f, #3949ab);
    }

    .btn-secondary {
        background: linear-gradient(45deg, #9e9e9e, #bdbdbd);
    }

        .btn-secondary:hover {
            background: linear-gradient(45deg, #757575, #9e9e9e);
        }

    @@media (max-width: 768px) {
        .form-container {
            padding: 2rem;
            margin: 1rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        .btn {
            width: 100%;
            margin-top: 10px;
        }
    }
</style>

<!-- Contenedor del Formulario -->
<div class="form-container">
    <h2>Editar Especialidad Veterinaria</h2>

    <!-- Formulario -->
    @using (Html.BeginForm("Edit", "VeterinarianSpeciality", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.HiddenFor(x => x.RowVersion)
        @Html.AntiForgeryToken()

        <!-- Nombre en Español -->
        <div class="form-floating">
            @Html.TextBoxFor(model => model.SpecialityNameES, new { @class = "form-control", placeholder = "Nombre en Español" })
            @Html.LabelFor(m => m.SpecialityNameES, "Nombre en Español *")
            <span class="text-danger">@Html.ValidationMessageFor(model => model.SpecialityNameES)</span>
        </div>

        <!-- Nombre en Inglés -->
        <div class="form-floating">
            @Html.TextBoxFor(model => model.SpecialityNameEN, new { @class = "form-control", placeholder = "Nombre en Inglés" })
            @Html.LabelFor(m => m.SpecialityNameEN, "Nombre en Inglés *")
            <span class="text-danger">@Html.ValidationMessageFor(model => model.SpecialityNameEN)</span>
        </div>

        <!-- Profesionales Asociados -->
        <div class="mb-3">
            <label class="form-label">Profesionales</label>
            <p>@Model.ProfessionalsAssociatedCount</p>
        </div>

        <!-- Botones -->
        <div class="buttons-container">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a href="@Url.Action("Index", "VeterinarianSpeciality", new { area = "Admin" })" class="btn btn-secondary">Volver</a>
        </div>
    }
</div>
