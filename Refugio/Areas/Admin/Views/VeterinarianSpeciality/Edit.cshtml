@model Refugio.Areas.Admin.Models.VeterinarianSpeciality.Edit

@{
    string title = (Model.IsNew ? Refugio.Resources.Languages.Global.Create : Refugio.Resources.Languages.Global.Edit) + " " + @Refugio.Resources.Languages.Global.VeterinarianSpeciality;
    ViewBag.Title = char.ToUpper(title[0]) + title.Substring(1).ToLower();
}

<!-- Estilos Modernos -->
<style>
    :root {
        --form-border-top: 5px solid #3f51b5;
        --font-size-base: 16px;
        --form-background-color: #fff;
        --soft-right-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        --form-placeholder-color: #666;
        --default-transition: all 0.3s cubic-bezier(0.4, 0, 1, 1);
        --form-box-border: 1px solid #ddd;
        --form-input-focus-border-color: #3f51b5;
        --form-input-focus-backgrund-color: #f9f9f9;
        --form-input-label-focus-color: #3f51b5;
        --btn-tertiary-background: #fff;
        --btn-tertiary-border: 1px solid #3f51b5;
        --btn-tertiary-hover-background: #f0f0f0;
    }

    html {
        font-size: var(--font-size-base);
    }

    .form-container {
        max-width: 1400px;
        margin: 2rem;
        padding: 3rem;
        background-color: var(--form-background-color);
        border-radius: 10px;
        box-shadow: var(--soft-right-shadow);
        border-top: var(--form-border-top);
    }

    h2 {
        text-align: center;
        color: #3f51b5;
        margin-bottom: 4rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .row {
        margin-bottom: 1.5rem;
    }

    .form-floating label {
        padding-left: 1.5rem;
        font-size: 1rem;
        color: var(--form-placeholder-color);
        transition: var(--default-transition);
        pointer-events: none;
    }

    .form-floating input {
        width: 100%;
        max-width: unset;
        border: var(--form-box-border);
        border-radius: 8px;
        transition: border-color 0.5s;
    }

        .form-floating input:focus {
            outline: none;
            border-color: var(--form-input-focus-border-color);
            background-color: var(--form-input-focus-backgrund-color);
        }

            .form-floating input:focus + label,
            .form-floating input:not(:placeholder-shown) + label {
                top: 12px;
                left: 17px;
                font-size: 0.85rem;
                color: var(--form-input-label-focus-color);
                padding: 0 5px;
            }

    .text-danger {
        font-size: 0.9em;
        margin-top: 4px;
    }

    .buttons-container {
        padding-top: 3rem;
        display: flex;
        gap: 2rem;
        justify-content: center;
        flex-wrap: wrap;
        align-content: center;
    }

    .form-label {
        font-size: 1rem;
        color: var(--form-placeholder-color);
        font-weight: bold;
        margin-bottom: 0.5rem;
        display: block;
    }

    .btn {
        display: inline-block;
        min-width: 150px;
        max-width: 300px;
        padding: 12px 24px;
        font-size: 1rem;
        font-weight: bold;
        color: #fff;
        border: none;
        border-radius: 8px;
        background: linear-gradient(45deg, #3f51b5, #5c6bc0);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            background: linear-gradient(45deg, #303f9f, #3949ab);
        }

    .btn-secondary {
        background: linear-gradient(45deg, #9e9e9e, #bdbdbd);
    }

        .btn-secondary:hover {
            background: linear-gradient(45deg, #757575, #9e9e9e);
        }

    .btn-tertiary {
        color: black;
        background: linear-gradient(45deg, #d1dee8, #d4e6f6);
    }

        .btn-tertiary:hover {
            background: linear-gradient(45deg, #6b79a1, #6390bc);
            color: #FFF;
        }

    @@media (max-width: 575.98px) {
        .form-container {
            padding: 2rem;
            margin: 1rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        .buttons-container {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }

    @@media (max-width:767.98px) {
        .form-floating {
            display: flex;
            gap: 1rem;
            flex-direction: column;
        }
    }

    @@media (min-width: 576px) and (max-width: 767.98px) {
        .form-container {
            padding: 3rem;
            margin: 2rem;
        }
    }

    @@media (min-width: 1494px) {
        .form-container {
            margin: 2rem auto;
        }
    }
</style>

<!-- Contenedor del Formulario -->
<div class="form-container">
    <h2>@title.ToUpper()</h2>

    @using (Html.BeginForm("Edit", "VeterinarianSpeciality", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.HiddenFor(x => x.RowVersion)
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="form-floating col-lg-4 col-md-6 col-sm-12">
                @Html.TextBoxFor(model => model.SpecialityNameES, new { @class = "form-control", placeholder = "" })
                @Html.LabelFor(m => m.SpecialityNameES)
                <span class="text-danger">@Html.ValidationMessageFor(model => model.SpecialityNameES)</span>
            </div>
            <div class="form-floating col-lg-4 col-md-6 col-sm-12">
                @Html.TextBoxFor(model => model.SpecialityNameEN, new { @class = "form-control", placeholder = "" })
                @Html.LabelFor(m => m.SpecialityNameEN)
                <span class="text-danger">@Html.ValidationMessageFor(model => model.SpecialityNameEN)</span>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-12">
                <label class="form-label">@Refugio.Resources.Languages.Global.Professionals</label>
                <p>@Model.ProfessionalsAssociatedCount</p>
            </div>
        </div>

        <div class="buttons-container">
            <button type="submit" class="btn btn-success">@Refugio.Resources.Languages.Global.Save</button>
            <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "VeterinarianSpeciality", new { area = "Admin" })'">@Refugio.Resources.Languages.Global.BackToList</button>
            <button type="button" class="btn btn-tertiary">Opción</button>
        </div>
    }
</div>
