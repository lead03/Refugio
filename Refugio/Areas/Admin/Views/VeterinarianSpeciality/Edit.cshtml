@model Refugio.Areas.Admin.Models.VeterinarianSpeciality.Edit

@{
    ViewBag.Title = "Editar Especialidad Veterinaria";
}

<!-- Estilos Modernos -->
<style>
    body {
        font-family: 'Roboto', Arial, sans-serif;
        background-color: #f5f5f5;
        color: #333;
    }

    .form-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 20px 30px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-top: 5px solid #3f51b5;
    }

    h2 {
        font-size: 2rem;
        text-align: center;
        color: #3f51b5;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .form-floating {
        position: relative;
        margin-bottom: 20px;
    }

        .form-floating label {
            position: absolute;
            left: 12px;
            font-size: 1rem;
            color: #666;
            transition: all 0.3s ease;
            pointer-events: none;
        }

        .form-floating input {
            width: 100%;
            border: 1px solid #ddd;
            border-radius: 8px; /* Bordes redondeados */
            padding: 12px 14px;
            font-size: 1rem;
            background-color: #fff;
            transition: border-color 0.3s;
        }

        .form-floating > label {
            position: absolute;
            font-size: 1rem;
            color: #666;
        }

        .form-floating input:focus {
            outline: none;
            border-color: #3f51b5;
            background-color: #f9f9f9;
        }

            .form-floating input:focus + label,
            .form-floating input:not(:placeholder-shown) + label {
                top: 12px;
                left: 5px;
                font-size: 0.85rem;
                color: #3f51b5;
                padding: 0 5px;
            }

        .form-floating input::placeholder {
            color: transparent;
        }

    .text-danger {
        font-size: 0.9em;
        margin-top: 4px;
    }

    .btn {
        display: inline-block;
        padding: 12px 24px;
        font-size: 1rem;
        font-weight: bold;
        color: #fff;
        border: none;
        border-radius: 8px;
        background: linear-gradient(45deg, #3f51b5, #5c6bc0);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
            background: linear-gradient(45deg, #303f9f, #3949ab);
        }

    .btn-secondary {
        background: linear-gradient(45deg, #9e9e9e, #bdbdbd);
    }

        .btn-secondary:hover {
            background: linear-gradient(45deg, #757575, #9e9e9e);
        }

    @@media (max-width: 768px) {
        .form-container {
            padding: 15px;
            margin: 10px;
        }

        h2 {
            font-size: 1.5rem;
        }

        .btn {
            width: 100%;
            margin-top: 10px;
        }
    }
</style>

<!-- Contenedor del Formulario -->
<div class="form-container">
    <h2>Editar Especialidad Veterinaria</h2>

    <!-- Formulario -->
    @using (Html.BeginForm("Edit", "VeterinarianSpeciality", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.HiddenFor(x => x.RowVersion)
        @Html.AntiForgeryToken()

        <!-- Nombre en Español -->
        <div class="form-floating">
            @Html.TextBoxFor(model => model.SpecialityNameES, new { @class = "form-control", placeholder = "Nombre en Español" })
            @Html.LabelFor(m => m.SpecialityNameES, "Nombre en Español *")
            <span class="text-danger">@Html.ValidationMessageFor(model => model.SpecialityNameES)</span>
        </div>

        <!-- Nombre en Inglés -->
        <div class="form-floating">
            @Html.TextBoxFor(model => model.SpecialityNameEN, new { @class = "form-control", placeholder = "Nombre en Inglés" })
            @Html.LabelFor(m => m.SpecialityNameEN, "Nombre en Inglés *")
            <span class="text-danger">@Html.ValidationMessageFor(model => model.SpecialityNameEN)</span>
        </div>

        <!-- Profesionales Asociados -->
        <div class="mb-3">
            <label class="form-label">Profesionales</label>
            <p>@Model.ProfessionalsAssociatedCount</p>
        </div>

        <!-- Botones -->
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a href="@Url.Action("Index", "VeterinarianSpeciality", new { area = "Admin" })" class="btn btn-secondary">Volver</a>
        </div>
    }
</div>
