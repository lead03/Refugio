@model Refugio.Areas.Admin.Models.Veterinarian.Edit
@{
    ViewBag.Title = "Edit";
}

<h2>Editar veterinario</h2>

@using (Html.BeginForm("Edit", "Veterinarian", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    if (Model.Id == 0)
    {
        <div class="form-group">
            @Html.LabelFor(model => model.UserName)
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserPassword)
            @Html.PasswordFor(model => model.UserPassword, new { @class = "form-control" })
        </div>
    }
    else
    {
        <div class="form-group">
            @Html.DisplayNameFor(model => model.UserName)
            @Html.DisplayFor(model => model.UserName, new { @class = "form-control" })
            @Html.HiddenFor(model => model.UserName)
            @Html.HiddenFor(model => model.UserPassword)
        </div>
    }

    <div class="form-group">
        @Html.LabelFor(model => model.FirstName)
        @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.LastName)
        @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StreetAddress)
        @Html.TextBoxFor(model => model.StreetAddress, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ApartmentNumber)
        @Html.TextBoxFor(model => model.ApartmentNumber, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.City)
        @Html.TextBoxFor(model => model.City, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ZipCode)
        @Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Province)
        @Html.TextBoxFor(model => model.Province, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PhoneNumberMain)
        @Html.TextBoxFor(model => model.PhoneNumberMain, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PhoneNumberAditional)
        @Html.TextBoxFor(model => model.PhoneNumberAditional, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Speciality)
        @Html.DropDownListFor(x => x.Speciality, Model.VeterinarianSpeciality, "-- Select --", new { @class = "filter" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsPermanent)
        @Html.CheckBoxFor(model => model.IsPermanent, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Salary)
        @Html.TextBoxFor(model => model.Salary, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TimeSlot)
        @Html.EditorFor(model => model.TimeSlot, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProfessionalLicense)
        @Html.EditorFor(model => model.ProfessionalLicense, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description)
        @Html.EditorFor(model => model.Description, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Veterinarian", new { area = "Admin" })" class="btn btn-success">Volver al listado</a>
</div>