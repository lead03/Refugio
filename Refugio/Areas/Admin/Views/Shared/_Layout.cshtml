<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi Refugio</title>
    <link rel="shortcut icon" type="image/png" href="~/Content/Images/browser-logo-icons8-dog-paw-32.png">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/font-awesome.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway:100,200,300,400,500,600,700,800,900">
</head>
<body>
    @*@Html.Partial("_Sidebar")*@
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark" aria-label="Third navbar example">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Refugio "Mi refugio"</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample03" aria-controls="navbarsExample03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExample03">
                <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home", new { Area="" })">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/admin/veterinarian">@Refugio.Resources.Languages.Global.Veterinarians</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/admin/veterinarianspeciality">@Refugio.Resources.Languages.Global.Specialities</a>
                    </li>
                </ul>
            </div>
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    @Refugio.Resources.Languages.Global.Language
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li>
                        <a href="@Url.Action("ChangeLanguage", "Language", new { language = Refugio.Resources.Language.SpanishKey, returnUrl = Request.Url.AbsoluteUri, Area="" })"
                           class="dropdown-item">@Refugio.Resources.Language.SpanishAbbreviation</a>
                    </li>
                    <li>
                        <a href="@Url.Action("ChangeLanguage", "Language", new { language = Refugio.Resources.Language.EnglishKey, returnUrl = Request.Url.AbsoluteUri, Area="" })"
                           class="dropdown-item">@Refugio.Resources.Language.EnglishAbbreviation</a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Refugio "Mi Refugio"</p>
        </footer>
    </div>
    @Scripts.Render("~/Scripts/Shared/alert-messages.js");

    <!-- Custom modal -->
    <script>
        const modalVariables = {
            size: {
                small: '@Refugio.Resources.CustomModal.Size.Small',
                medium: '@Refugio.Resources.CustomModal.Size.Medium',
                large: '@Refugio.Resources.CustomModal.Size.Large',
            },
            type: {
                danger: '@Refugio.Resources.CustomModal.Types.Danger',
                success: '@Refugio.Resources.CustomModal.Types.Success',
                warning: '@Refugio.Resources.CustomModal.Types.Warning',
                info : '@Refugio.Resources.CustomModal.Types.Info',
            }
        }
        var deleteModalSize = modalVariables.size.small;
        var deleteModalType = modalVariables.type.danger;
        var deleteModalIcon = 'fa fa-exclamation-triangle';
    </script>
    @Scripts.Render("~/Scripts/Shared/custom-modal.js")
    <!--End custom modal-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/Scripts/Areas/Admin/general.js")
    @Styles.Render("~/Content/Styles/Areas/Admin/general.css")
    @*@Styles.Render("~/Content/Styles/Shared/sidebar.css")*@
</body>
</html>